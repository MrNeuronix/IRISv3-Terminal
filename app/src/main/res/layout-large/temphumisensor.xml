<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="216dp"
        android:layout_height="187dp"
        android:layout_x="57dp"
        android:layout_y="287dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/temperature"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="241dp" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="327dp"
        android:layout_height="194dp"
        android:layout_x="295dp"
        android:layout_y="283dp"
        android:text="0C"
        android:textColor="@color/white"
        android:textSize="100dp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="578dp"
        tools:layout_editor_absoluteY="203dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="216dp"
        android:layout_height="187dp"
        android:layout_x="689dp"
        android:layout_y="287dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/humidity"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="841dp" />

    <TextView
        android:id="@+id/humi"
        android:layout_width="342dp"
        android:layout_height="194dp"
        android:layout_x="932dp"
        android:layout_y="281dp"
        android:text="0%"
        android:textColor="@color/white"
        android:textSize="100dp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="578dp"
        tools:layout_editor_absoluteY="803dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="1223dp"
        android:layout_height="93dp"
        android:layout_x="29dp"
        android:layout_y="52dp"
        android:text="DeviceName"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="381dp"
        tools:layout_editor_absoluteY="154dp" />

</AbsoluteLayout>