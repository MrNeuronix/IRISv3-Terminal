<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="279dp"
        android:layout_height="250dp"
        android:layout_x="295dp"
        android:layout_y="259dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        app:srcCompat="@drawable/temperature"
        tools:layout_editor_absoluteX="262dp"
        tools:layout_editor_absoluteY="241dp" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="515dp"
        android:layout_height="234dp"
        android:layout_x="639dp"
        android:layout_y="268dp"
        android:text="0C"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="120dp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:layout_editor_absoluteX="578dp"
        tools:layout_editor_absoluteY="203dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="1223dp"
        android:layout_height="93dp"
        android:layout_x="32dp"
        android:layout_y="51dp"
        android:text="DeviceName"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="381dp"
        tools:layout_editor_absoluteY="154dp" />

</AbsoluteLayout>